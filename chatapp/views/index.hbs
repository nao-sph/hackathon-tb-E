<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/4.0.0/flatly/bootstrap.min.css">
<link rel="stylesheet" type="text/css" media="only screen and (max-device-width:480px)" href="/stylesheets/index/sp.css"/>
<link rel="stylesheet" type="text/css" media="screen and (min-device-width:481px)" href="/stylesheets/index/pc.css" />
<link rel="stylesheet" type="text/css" href="/image-picker/image-picker.css" />
<script src="/image-picker/image-picker.js"></script>
<script src="/image-picker/image-picker.min.js"></script>

<body>

  <div class="container">
    <div class="row">
      <!-- <h1>Node Chat<span>&nbsp　ver.A-group</span></h1> -->
      <div class="icon"><img src="/img/linep.png" /></div>
    </div>

    <div class="row form">
      <form id="room_submit" name="room_submit" method="post" action="/room">
        <div class="index-user_name">
          <div id="user">
          </div>
          <!-- <label id="userName" name="userName">{{userName}}</label> -->
          <!-- <input type="text" id="userName" name="userName" class="index-user_name_text" placeholder="Username"> -->
          <input type="text" id="userName" name="userName" class="index-user_name_text" placeholder="Username" value="{{userName}}">
          <div class="userIcon">
            <select id="imagePicker" name="imagePicker">
              <option data-img-src='/img/icon1.png' value='1'>
              <option data-img-src='/img/icon2.png' value='2'>
              <option data-img-src='/img/icon3.png' value='3'>
              <option data-img-src='/img/icon4.png' value='4'>
              <option data-img-src='/img/icon5.png' value='5'>
              <option data-img-src='/img/icon6.png' value='6'>
            </select>
          </div>
          <div class="index-enter">
            <input type="button" value="ENTER" class="common-button index-enter_button btn btn-info btn-block" onclick="enter();">
          </div>
          <div>
            {{alert}}
          </div>
        </div>
        <input type="button" value="新規登録" id="transition_register" class="btn btn-link " onclick="location.href='/register'"/>
      </form>
      <!-- <form id="transition_register" action="/register">
        <input type="submit" value="Sign up"class="btn btn-link"/>
      </form> -->
    </div>
  </div>
</body>

